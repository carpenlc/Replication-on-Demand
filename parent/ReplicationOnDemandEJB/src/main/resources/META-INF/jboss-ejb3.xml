<?xml version="1.1" encoding="UTF-8"?>
<jboss:ejb-jar xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
               xmlns="http://java.sun.com/xml/ns/javaee"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
               version="3.1"
               impl-version="2.0">
               
    <enterprise-beans>

        <session>
            <ejb-name>MetricsService</ejb-name>
            <resource-ref>
                <res-ref-name>jdbc/RODMetrics</res-ref-name>
                <jndi-name>java:jboss/datasources/RODMetrics</jndi-name>
            </resource-ref>
        </session>
    
        <session>
            <ejb-name>ProductService</ejb-name>
            <resource-ref>
                <res-ref-name>jdbc/ROD</res-ref-name>
                <jndi-name>java:jboss/datasources/ROD</jndi-name>
            </resource-ref>
        </session>
    </enterprise-beans>
</jboss:ejb-jar>